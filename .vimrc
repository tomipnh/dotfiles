" Make Vim more useful
set nocompatible

" 
set background=dark

" Enable syntax highlighting
syntax on

set autoindent
set backspace=indent,eol,start
" Highlight current line
set cursorline
set encoding=utf-8 nobomb
set expandtab
" Highlight searches
set hlsearch
" Ignore case of searches
set ignorecase
" Highlight dynamically as pattern is typed
set incsearch
" Enable mouse in all modes
set mouse=a
" Disable error bells
set noerrorbells
" Donâ€™t reset cursor to start of line when moving around.
set nostartofline
set nowrap
" Enable line numbers
set nu
" Show the cursor position
set ruler
set shiftwidth=2
" Show the current mode
set showmode
set showtabline=2
set smartcase
set smarttab
set softtabstop=2
" Make tabs as wide as two spaces
set tabstop=2
set ttymouse=xterm
set wrapscan
