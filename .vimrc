set nocompatible


set background=dark
syntax on

set autoindent
set backspace=indent,eol,start
set cursorline
set encoding=utf-8 nobomb
set expandtab
set hlsearch
set ignorecase
set incsearch
set mouse=a
set noerrorbells
set nowrap
set nu
set ruler
set shiftwidth=2
set showtabline=2
set smartcase
set smarttab
set softtabstop=2
set ttymouse=xterm
set visualbell
set wrapscan
